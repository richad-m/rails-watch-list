<div class="container">
  <h1 class="text-center my-2">Tes playlists de Booba</h1>
  <ul>
    <% @lists.each do |list| %>

      <div class="card-product ">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
            </li>
            <% end %>
              <div class="card-product-infos w-100">
                <h2>
                  <%= link_to "#{list.name}" , list_path(list.id) %>
                </h2>
                <div class="d-flex justify-content-between">
                  <p>Les meilleurs sons de <strong>Booba</strong>.</p>
                  <%= link_to "<i class='far fa-trash-alt'></i>" .html_safe , list_path(list.id), method: :delete, data:
                    { confirm: "Are you sure?" } %>
                </div>

              </div>
      </div>
      <% end %>
  </ul>
  <%= link_to "Add a list" , new_list_path , :class=> "btn btn-primary"%>
